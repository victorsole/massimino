    "cardio_guidelines": {
      "phase_1_stabilization": {
        "stage": "Stage I",
        "type": "Low-intensity steady-state",
        "zone": "Zone 1 (65-75% max HR)",
        "duration": "30-60 minutes",
        "frequency": "3-5x per week"
      },
      "phase_2_strength_endurance": {
        "stage": "Stage II",
        "type": "Moderate-intensity interval training",
        "zone": "Zone 2 (76-85% max HR) with Zone 1 recovery",
        "duration": "20-40 minutes total",
        "frequency": "2-4x per week"
      },
      "phase_3_hypertrophy": {
        "stage": "Stage II",
        "type": "Moderate-intensity interval training",
        "zone": "Zone 2 (76-85% max HR)",
        "duration": "20-40 minutes",
        "frequency": "2-3x per week"
      },
      "phase_4_maximal_strength": {
        "stage": "Stage II or III",
        "type": "Interval or high-intensity training",
        "zone": "Zone 2-3 (76-95% max HR)",
        "duration": "10-30 minutes",
        "frequency": "2-3x per week"
      },
      "phase_5_power": {
        "stage": "Stage III",
        "type": "High-intensity interval training",
        "zone": "Zone 3 (86-95% max HR)",
        "duration": "10-20 minutes",
        "frequency": "2-3x per week"
      }
    },
    "reassessment_schedule": {
      "description": "Regular client reassessments to track progress and adjust programming",
      "frequency": "Every 4-6 weeks",
      "assessments": [
        {
          "category": "Movement Assessment",
          "tests": [
            "Overhead Squat Assessment",
            "Single-leg Squat Assessment",
            "Push-up Assessment",
            "Davies Test"
          ]
        },
        {
          "category": "Performance Assessment",
          "tests": [
            "Vertical Jump Test",
            "Shark Skill Test",
            "Upper Extremity Strength Assessment",
            "Lower Extremity Strength Assessment"
          ]
        },
        {
          "category": "Physiological Assessment",
          "tests": [
            "Body Composition",
            "Cardiorespiratory Fitness (VO2 max or submaximal)",
            "Resting Heart Rate",
            "Blood Pressure"
          ]
        },
        {
          "category": "Subjective Assessment",
          "tests": [
            "PAR-Q+ reassessment",
            "Goal review",
            "Client satisfaction survey"
          ]
        }
      ]
    },
    "progression_model": {
      "description": "Evidence-based progression through OPT phases",
      "beginner_path": ["Phase 1 → Phase 2 → Phase 3"],
      "intermediate_path": ["Phase 2 → Phase 3 → Phase 4"],
      "advanced_path": ["Phase 3 → Phase 4 → Phase 5"],
      "athlete_path": ["Phase 4 → Phase 5 (with Phase 1 maintenance)"],
      "general_rules": [
        "Spend 4-6 weeks in each phase before progressing",
        "Can repeat phases based on client needs and goals",
        "Always maintain some Phase 1 work for injury prevention",
        "Deload every 4-6 weeks regardless of phase",
        "Reassess before progressing to ensure readiness"
      ]
    },
