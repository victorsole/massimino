  "program_philosophy": {
    "origin": "This program was developed based on the training principles that transformed three brothers from a tiny Pyrenean village into Spanish champions and international competitors. Mogul skiing demands explosive power, incredible core stability, and the ability to absorb repeated impacts while maintaining perfect body control.",
    "verdabros_quote": "\"We grew up with skiing in our blood. Our parents put us on skis before we could walk. The mountains are our gym, but the gym prepares us for the mountains.\"",
    "core_principles": [
      "Explosive power for aerial maneuvers and mogul absorption",
      "Bulletproof core for rotational stability during tricks",
      "Single-leg strength for asymmetric landings",
      "Eccentric strength for impact absorption",
      "Endurance for back-to-back competition runs"
    ]
  },

  "realistic_expectations": {
    "8_week_realistic_outcomes": [
      "25-40% improvement in explosive leg power",
      "Significant core stability gains",
      "Better single-leg balance and proprioception",
      "Improved eccentric strength for impact absorption",
      "Enhanced cardiovascular endurance for competition"
    ],
    "timeline": {
      "weeks_1_2": "Foundation - building work capacity and movement patterns",
      "weeks_3_4": "Power development - introducing explosive movements",
      "weeks_5_6": "Sport-specific - integrating rotational and balance work",
      "weeks_7_8": "Peak preparation - competition-ready conditioning"
    }
  },

  "training_schedule": {
    "day_1": "Lower Body Power & Plyometrics",
    "day_2": "Upper Body & Core Stability",
    "day_3": "Rest / Active Recovery",
    "day_4": "Single-Leg & Balance Training",
    "day_5": "Rest / Light Cardio",
    "day_6": "Full Body Power & Conditioning",
    "day_7": "Rest / Mobility Work"
  },

