{
  "program": "Mike Mentzer's Heavy Duty",
  "author": "Mike Mentzer",
  "era": "High Intensity Training Era (1970s-1980s)",
  "version": "1.0",
  "program_id": "mike-mentzer-heavy-duty",
  "target_audience": "Advanced Lifters",
  "duration_weeks": 12,
  "session_duration_minutes": {
    "min": 30,
    "max": 45
